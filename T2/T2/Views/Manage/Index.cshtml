@model T2.Models.IndexViewModel
@{
    ViewBag.Title = "Gestione account";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Modifica le impostazioni dell'account</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Cambia password", "ChangePassword", null, htmlAttributes: new { @class = "btn btn-primary" })
            }
            else
            {
                @Html.ActionLink("Crea", "SetPassword")
            }
        </dd>
    </dl>
</div>
